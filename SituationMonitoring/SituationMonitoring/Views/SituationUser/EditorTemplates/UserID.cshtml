@model int


@(Html.Kendo().DropDownListFor(m => m)
          .HtmlAttributes(new { style = "width: 100%;" })
          .DataTextField("UserFullName")
          .DataValueField("UserID")
          .Filter("contains")
          .DataSource(source =>
          {
              
              source.Read(read =>
              {
                  read.Action("GetUsers", "SituationUser");
              })
              .ServerFiltering(false);
          })
)
@Html.ValidationMessageFor(m => m)
