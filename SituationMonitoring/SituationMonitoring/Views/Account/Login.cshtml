    <script>
    kendo.culture("en-GB");
    </script>
</head>
<body class="error-body no-top">
    <div class="container">
        <div class="row login-container column-seperation">

            <div class="col-md-6">
                <br>
                @model SituationMonitoring.Models.Users_Table

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>تسجيل الدخول </h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">


                            <label for="fullname" class="required">اسم المستخدم</label>
                            @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="fullname" class="required">كلمة المرور</label>

                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder= "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="موافق" class="k-button k-primary" />
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="col-md-5 col-md-offset-1">
                <h2>نظام الأرشيف الالكتروني</h2>
                <p>
                    المركز الفلسطيني للديمقراطية وحل النزاعات
                </p>
                <br>


            </div>

        </div>
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN CORE JS FRAMEWORK-->
    <script src="@Url.Content("~/Content/assets/plugins/jquery-ui/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/plugins/boostrapv3/js/bootstrap.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/assets/plugins/pace/pace.min.js")" type="text/javascript"></script>


    <script src="@Url.Content("~/Content/assets/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/js/login.js")" type="text/javascript"></script>

    <!-- BEGIN CORE TEMPLATE JS -->
    <!-- END CORE TEMPLATE JS -->
</body>



</html>