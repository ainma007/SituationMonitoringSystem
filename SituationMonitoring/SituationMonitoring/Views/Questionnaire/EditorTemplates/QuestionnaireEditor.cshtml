                <td><span> @Html.LabelFor(model => model.Question1_2_4NotEnoughDrinking)@Html.CheckBoxFor(model => model.Question1_2_4NotEnoughDrinking) @Html.ValidationMessageFor(model => model.Question1_2_4NotEnoughDrinking)</span></td>



