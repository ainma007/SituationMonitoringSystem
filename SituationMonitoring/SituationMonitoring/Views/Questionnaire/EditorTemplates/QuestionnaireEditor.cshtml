@model SituationMonitoring.Models.QuestionnaireViewModel

<style type="text/css">
    div.k-edit-form-container {
        width: 100%;
    }

        div.k-edit-form-container div.editor-field textarea, input.k-textbox {
            width: 100%;
            max-width: none;
        }
</style>

<div class="k-edit-form-container" style="margin:auto;">
    <table class="table table-bordered no-more-tables">
        <thead>
            
            <tr>
                <th colspan=4 class="alert alert-info"><h4>الجزء الأول: المراقبة في حالة الطوارئ/ معلومات فريق التقييم</h4></th>
            </tr>
            <tr>

                <th class="text-center" style="width:30%">الاسم</th>
                <th class="text-center" style="width:30%">المؤسسة</th>
                <th class="text-center" style="width:22%">البريد الالكتروني</th>
                <th class="text-center" style="width:22%">رقم الجوال</th>

            </tr>
        </thead>
        
            
            
        
        <tbody>
            <tr>

                <td><span>@Html.EditorFor(model => model.EmployeeName) @Html.ValidationMessageFor(model => model.EmployeeName)</span></td>
                <td><span>@Html.EditorFor(model => model.CenterName) @Html.ValidationMessageFor(model => model.CenterName)</span>
                <td><span>@Html.EditorFor(model => model.EmployeeMail) @Html.ValidationMessageFor(model => model.EmployeeMail)</span>
                <td><span>@Html.EditorFor(model => model.EmployeePhone) @Html.ValidationMessageFor(model => model.EmployeePhone)</span>


            </tr>
        </tbody>


        
    </table>



    <table class="table table-bordered no-more-tables">

   

        <thead>

            <tr>
                <th colspan=5 class="alert alert-info"><h4>الجزء الثاني: المراقبة في حالة الطوارئ/ معلومات فريق التقييم</h4></th>
            </tr>
            <tr>

                <th class="text-center" style="width:30%">الاسم</th>
                <th class="text-center" style="width:15%">الجنس</th>
                <th class="text-center" style="width:20%"> دوره في المجتمع</th>
                <th class="text-center" style="width:20%">مكانه الاصلي</th>
                <th class="text-center" style="width:15%">رقم الجوال</th>

            </tr>
        </thead>
        <tbody>

            <tr>

                <td><span>@Html.EditorFor(model => model.PersonName) @Html.ValidationMessageFor(model => model.EmployeeName)</span></td>
                <td>
                    <span>
                        @(Html.Kendo().ComboBoxFor(model => model.PersonGEnder)

          .Placeholder("اختر الجنس")
          .BindTo(new List<string>() {
              "ذكر",
              "أنثى",

          })
          .SelectedIndex(0)
          .Suggest(true)
                        )
                        @Html.ValidationMessageFor(model => model.PersonGEnder)
                    </span>
                </td>
                <td><span>@Html.EditorFor(model => model.RoleInCommunity) @Html.ValidationMessageFor(model => model.EmployeeMail)</span></td>
                <td><span>@Html.EditorFor(model => model.Place_of_origin) @Html.ValidationMessageFor(model => model.EmployeePhone)</span></td>
                <td><span>@Html.EditorFor(model => model.PersonMobile) @Html.ValidationMessageFor(model => model.EmployeePhone)</span></td>


            </tr>
        </tbody>
    </table>



    <table class="table table-bordered no-more-tables">



        <thead>

            <tr>
                <th colspan=4 class="alert alert-info"><h4>الجزء الثالث: مصادر معلومات الموقع</h4></th>
            </tr>
            <tr>

                <th class="text-center" style="width:30%">المنطقة/ مركز الايواء</th>
                <th class="text-center" style="width:15%">العدد التقديري للافراد</th>
                <th class="text-center" style="width:15%"> العدد التقديري للعائلات</th>
                <th class="text-center" style="width:40%">وصف الموقع</th>

            </tr>
        </thead>
        <tbody>

            <tr>

                <td><span>@Html.Kendo().TextBoxFor(model => model.CollectiveCenter) @Html.ValidationMessageFor(model => model.EmployeeName)</span></td>
            
                <td><span>@Html.Kendo().NumericTextBoxFor(model => model.Estimated_Number_Of_Individuals) @Html.ValidationMessageFor(model => model.Estimated_Number_Of_Individuals)</span></td>
                <td><span>@Html.Kendo().NumericTextBoxFor(model => model.Estimated_Number_Of_Families) @Html.ValidationMessageFor(model => model.Estimated_Number_Of_Families)</span></td>
                <td><span>@Html.EditorFor(model => model.Site_Description) @Html.ValidationMessageFor(model => model.Site_Description)</span></td>


            </tr>
        </tbody>
    </table>

    <div class="alert alert-info"><h4>1.اهتامات الحماية الواضحة خارج مركز الإيواء</h4></div> 

