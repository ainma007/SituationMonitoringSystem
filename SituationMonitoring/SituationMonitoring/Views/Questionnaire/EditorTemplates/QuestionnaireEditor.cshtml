            </tr>
        </thead>
        <tbody>

            <tr>

                <td colspan=4>
                    <span>
                        @(Html.Kendo().ComboBoxFor(model => model.Question1_1)

          .Placeholder("اختر الاجابة")
          .BindTo(new List<string>() {
              "نعم",
              "لا",
              "غير متأكد",
          })
          .SelectedIndex(0)
          .Suggest(true)
                        )
                        @Html.ValidationMessageFor(model => model.Question1_1)
                    </span>
                </td>


            </tr>
        </tbody>

        <thead>


            <tr>
                <th colspan=4 class="text-right" style="width:30%">1.1.1 إذا كانت الاجابة بنعم،ما هو عدد المجموعات الاسرية التي تقيم مع عائلات مضيفة</th>


            </tr>
        </thead>
        <tbody>

            <tr>

                <td colspan=4>
                    <span>
                        @(Html.Kendo().ComboBoxFor(model => model.Question1_1_1)

          .Placeholder("اختر الاجابة")
          .BindTo(new List<string>() {
              "أقل من 10",
              "10-50",
              "100-50",
              "أكثر من 100",
          })
          .SelectedIndex(0)
          .Suggest(true)
                        )
                        @Html.ValidationMessageFor(model => model.Question1_1_1)
