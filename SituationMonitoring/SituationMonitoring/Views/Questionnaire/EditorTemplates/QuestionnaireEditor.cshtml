            <tr>

                <td><span>@Html.LabelFor(model => model.Question1_2_5UnsafeHousing) @Html.CheckBoxFor(model => model.Question1_2_5UnsafeHousing) @Html.ValidationMessageFor(model => model.Question1_2_5UnsafeHousing)</span></td>
                <td><span> @Html.LabelFor(model => model.Question1_2_6Overcrowding)@Html.CheckBoxFor(model => model.Question1_2_6Overcrowding) @Html.ValidationMessageFor(model => model.Question1_2_6Overcrowding)</span></td>
                <td><span> @Html.LabelFor(model => model.Question1_2_7InsufficientBedding)@Html.CheckBoxFor(model => model.Question1_2_7InsufficientBedding) @Html.ValidationMessageFor(model => model.Question1_2_7InsufficientBedding)</span></td>
                <td><span> @Html.LabelFor(model => model.Question1_2_8NotEnoughWater)@Html.CheckBoxFor(model => model.Question1_2_8NotEnoughWater) @Html.ValidationMessageFor(model => model.Question1_2_8NotEnoughWater)</span></td>



            </tr>


            <tr>

                <td colspan=2><span>@Html.LabelFor(model => model.Question1_2_9Not_enough_humanitarian_assistance) @Html.CheckBoxFor(model => model.Question1_2_9Not_enough_humanitarian_assistance) @Html.ValidationMessageFor(model => model.Question1_2_9Not_enough_humanitarian_assistance)</span></td>
                <td colspan=2><span> @Html.LabelFor(model => model.Question1_2_9Text)@Html.EditorFor(model => model.Question1_2_9Text) @Html.ValidationMessageFor(model => model.Question1_2_9Text)</span></td>
                

            </tr>

            <tr>

                <td colspan=2><span>@Html.LabelFor(model => model.Question1_2_10No_Access_to_essential_services) @Html.CheckBoxFor(model => model.Question1_2_10No_Access_to_essential_services) @Html.ValidationMessageFor(model => model.Question1_2_10No_Access_to_essential_services)</span></td>
                <td colspan=2><span> @Html.LabelFor(model => model.Question1_2_10Text)@Html.EditorFor(model => model.Question1_2_10Text) @Html.ValidationMessageFor(model => model.Question1_2_10Text)</span></td>


            </tr>

            <tr>

                <td colspan=2><span>@Html.LabelFor(model => model.Question1_2_11Other) @Html.CheckBoxFor(model => model.Question1_2_11Other) @Html.ValidationMessageFor(model => model.Question1_2_11Other)</span></td>
                <td colspan=2><span> @Html.LabelFor(model => model.Question1_2_11Text)@Html.EditorFor(model => model.Question1_2_11Text) @Html.ValidationMessageFor(model => model.Question1_2_11Text)</span></td>


            </tr>
        </tbody>

        <thead>


            <tr>
                <th colspan=4 class="text-right" style="width:30%">1.3 ما هي الاهتمامات الرئيسية لأشخاص آخرين في مجتمعك غير الأشخاص الذين يقيمون مع عائلات مضيفة؟</th>


            </tr>
        </thead>
        <tbody>

            <tr>

                <td><span>@Html.LabelFor(model => model.Question1_3_1Family_CommunityDisputes) @Html.CheckBoxFor(model => model.Question1_3_1Family_CommunityDisputes) @Html.ValidationMessageFor(model => model.Question1_3_1Family_CommunityDisputes)</span></td>
                <td><span> @Html.LabelFor(model => model.Question1_3_2NotEnoughFood)@Html.CheckBoxFor(model => model.Question1_3_2NotEnoughFood) @Html.ValidationMessageFor(model => model.Question1_3_2NotEnoughFood)</span></td>
                <td><span> @Html.LabelFor(model => model.Question1_3_3NotEnoughDrinking)@Html.CheckBoxFor(model => model.Question1_3_3NotEnoughDrinking) @Html.ValidationMessageFor(model => model.Question1_3_3NotEnoughDrinking)</span></td>
