        </thead>
        <tbody>

            <tr>

                <td><span>@Html.LabelFor(model => model.Question1_2_1_Family_CommunityDisputes) @Html.CheckBoxFor(model => model.Question1_2_1_Family_CommunityDisputes) @Html.ValidationMessageFor(model => model.Question1_2_1_Family_CommunityDisputes)</span></td>
